{
      "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "jsx": "react",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
      },
      "include": [
        "src",
        "src/*.tsx",
      ]
    }